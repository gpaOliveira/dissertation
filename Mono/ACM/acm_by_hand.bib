 booktitle = {Proceedings of the 10th International Conference on Predictive Models in Software Engineering},
 series = {PROMISE '14},
 year = {2014},
 isbn = {978-1-4503-2898-2},
 location = {Turin, Italy},
 pages = {82--91},
 numpages = {10},
